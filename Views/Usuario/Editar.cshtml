@model Usuario

@{
    ViewData["Title"] = "Editar";
}
<div>
    <h3>Editar Cadastro</h3>
    <br>
    <form method="POST" asp-action="Editar">

        <input type="hidden" asp-for="Id">

        <p>
            <label asp-for="Nome">Informe seu nome:</label>
            <input asp-for="Nome">
        </p>
        <p>
            <label asp-for="Email">E-mail:</label>
            <input asp-for="Email">
        </p>
        <p>
            <label asp-for="Senha">Senha:</label>
            <input asp-for="Senha">
        </p>
        <p>
            <label asp-for="DataNascimento">Data de Nascimento:</label>
            <input asp-for="DataNascimento" type="date">
        </p>
        <p>
            <label asp-for="Telefone">Telefone:</label>
            <input asp-for="Telefone">
        </p>
        <p>
            <label asp-for="Cep">CEP:</label>
            <input asp-for="Cep">
        </p>
        <p>
            <label asp-for="Endereco">Endere√ßo:</label>
            <input asp-for="Endereco">
        </p>
        <p>
            <input type="submit" value="Salvar">
        </p>

    </form>
</div>
